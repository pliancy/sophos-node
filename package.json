{
  "name": "sophos",
  "version": "0.1.0",
  "description": "Typescript wrapper for Sophos's API",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage tmp",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "npm run clean && npm run lint:fix && npm run format:fix && tsc",
    "build:ci": "tsc",
    "build:check": "tsc --noEmit",
    "build:watch": "npm run clean && tsc -w",
    "prepublishOnly": "npm run build"
  },
  "keywords": [],
  "author": {
    "name": "Santese Smith"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/santese/sophos-node.git"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "np": "^7.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12"
  },
  "volta": {
    "node": "14.15.4"
  },
  "dependencies": {
    "@types/qs": "^6.9.5",
    "axios": "^0.21.1",
    "qs": "^6.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build:check"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ],
    "*.${js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "np": {
    "yarn": false,
    "branch": "main"
  }
}
